<div class="sign-up-modal">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="logo-container">

           <%= link_to root_path, class: "navbar-wagon-brand logo-reg" do %>
    <%= image_tag "rememberme.png", height: 50 %>
<% end %>
    </div>

    <form class="details">
        <div class="input-container">
          <div class="form-inputs">
           <%= f.input :email, required: true, autofocus: true, class: "col-sm-12 email-input with-placeholder", id: "email"%>
        </div>
        <div class="input-container">
          <%= f.input :password, required: false, class: "col-sm-5 username-input with-placeholder", id: "username" %>
        </div>
        </div>
        <div class="col-sm-12 form-checkbox">
            <label>
               <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></label>
        </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in" %>
              </div>

        <p>You don't have an account?<%= render "devise/shared/links" %>

    </form>
</div>
<% end %>

