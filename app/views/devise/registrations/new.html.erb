
<div class="sign-up-modal">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <div class="logo-container">
            <%= link_to root_path, class: "navbar-wagon-brand logo-reg" do %>
    <%= image_tag "rememberme.png", height: 50 %>
<% end %>

    </div>

    <form class="details">
        <div class="input-container">
          <div class="form-inputs">
           <%= f.input :email, required: true, autofocus: true, class: "col-sm-12 email-input with-placeholder", id: "email"%>
        </div>
        <div class="input-container">
          <%= f.input :password, required: true, class: "col-sm-5 username-input with-placeholder", id: "username", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="input-container">
          <%= f.input :password_confirmation, required: true, class: "col-sm-5 col-sm-push-2 password-input with-placeholder", id: "password" %>
        </div>
        </div>
        <div class="col-sm-12 form-checkbox">
            <label>
                <input type="checkbox" value="true"> Keep me signed in</label>
        </div>

              <div class="form-actions">
                <%= f.button :submit, "Sign up" %>
              </div>

        <p>Already have an account? <%= render "devise/shared/links" %>

    </form>
</div>
<% end %>

