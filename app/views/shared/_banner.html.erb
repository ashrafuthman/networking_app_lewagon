<% if user_signed_in? %>
  <div class="banner banner-signed-in" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url(<%= image_path 'banner-home.jpg'%>);">
    <div class="banner-content">
      <div class="banner-info">
        <h1>Remember me?</h1>
        <p>Remember the people you met.</p>
        <div class="button-banner">
          <div class="search-button">
            <%= link_to 'Create a Contact!', new_contact_path, method: :get, class: "btn btn-info btn-lg" %>
          </div>
          <div class="search-button">
            <%= link_to 'Add a Milestone!', root_path, class: "btn  btn-info btn-lg", method: :get %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('assets/images/banner-home.jpg');">
    <div class="banner-content">
      <h1>Remember me?</h1>
      <p>
        <span id="banner-typed-text"></span>
      </p>
      <div class="button-banner">
        <%= link_to 'Start Remembering', new_contact_path, class: "btn btn-secondary btn-lg", method: :get %>
      </div>
    </div>    
  </div>
<% end %>
